<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:color="@color/colorPrimary" android:state_pressed="false">
        <layer-list>
            <item android:bottom="3px" android:top="2px">
                <shape>

                    <stroke android:color="@color/colorWhite"
                        android:width="1dp"/>

                    <gradient android:angle="90"
                        android:endColor="@color/colorPrimaryLight"
                        android:startColor="@color/colorPrimary" />

                    <corners android:radius="10dp" />

                    <padding android:bottom="5dp"
                        android:left="5dp"
                        android:right="5dp"
                        android:top="5dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:color="@color/colorPrimaryDark" android:state_pressed="true">
        <layer-list>
            <item android:bottom="5px">
                <shape>
                    <padding android:bottom="5dp" />
                    <stroke android:color="@color/colorPrimaryLight"
                        android:width="1dp"/>
                    <solid android:color="@color/colorAccent"/>
                    <corners android:radius="5dp" />
                    <padding android:bottom="10dp"
                        android:left="10dp"
                        android:right="5dp"
                        android:top="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>