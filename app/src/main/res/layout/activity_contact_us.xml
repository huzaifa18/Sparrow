<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ContactUs"
    android:background="@color/colorPrimary">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rl_app_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <RelativeLayout
                    android:id="@+id/ll_logo_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:id="@+id/iv_logo"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:src="@drawable/sparrow_logo"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_toRightOf="@+id/iv_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="SIRIUS"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:layout_marginLeft="10dp"/>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_below="@+id/ll_logo_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/iv_history"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        app:srcCompat="@drawable/ic_person_add_white_24dp"/>

                    <TextView
                        android:id="@+id/tv_version1"
                        android:layout_toRightOf="@+id/iv_history"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Version"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:id="@+id/tv_version"
                        android:layout_below="@+id/tv_version1"
                        android:layout_toRightOf="@+id/iv_history"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="1.0.0"
                        android:layout_marginLeft="10dp"/>

                </RelativeLayout>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/ll_author"
                android:layout_below="@+id/rl_app_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/tv_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Author"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:layout_marginLeft="30dp"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"/>


                <RelativeLayout
                    android:id="@+id/rl_compnay"
                    android:layout_below="@+id/tv_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/iv_company"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        app:srcCompat="@drawable/ic_phone_call"/>

                    <TextView
                        android:id="@+id/tv_company"
                        android:layout_toRightOf="@+id/iv_company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Company"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:layout_below="@+id/tv_company"
                        android:layout_toRightOf="@+id/iv_company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="SIRIUS"
                        android:layout_marginLeft="10dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_email"
                    android:layout_below="@+id/rl_compnay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/iv_email"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        app:srcCompat="@drawable/ic_sendd"/>

                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_toRightOf="@+id/iv_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:layout_below="@+id/tv_email"
                        android:layout_toRightOf="@+id/iv_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="contact@sirius.pk"
                        android:layout_marginLeft="10dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_website"
                    android:layout_below="@+id/rl_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/iv_website"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:backgroundTint="@color/colorWhite"
                        app:srcCompat="@drawable/ic_share"/>

                    <TextView
                        android:id="@+id/tv_website"
                        android:layout_toRightOf="@+id/iv_website"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Website"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:layout_below="@+id/tv_website"
                        android:layout_toRightOf="@+id/iv_website"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="www.sirius.pk"
                        android:layout_marginLeft="10dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_phone"
                    android:layout_below="@+id/rl_website"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/iv_phone"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        app:srcCompat="@drawable/ic_call_btn"/>

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_toRightOf="@+id/iv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:layout_below="@+id/tv_phone"
                        android:layout_toRightOf="@+id/iv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="SIRIUS"
                        android:layout_marginLeft="10dp"/>

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@id/ll_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:layout_marginLeft="30dp"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_below="@+id/tv_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Contact Us"/>
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>