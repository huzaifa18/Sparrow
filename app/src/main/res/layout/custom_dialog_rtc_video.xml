<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/dialog_bg"
    android:layout_height="fill_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:tint="#97000000"
        android:src="@drawable/demo"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/video_user_img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_man3" />

        <TextView
            android:id="@+id/video_text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/video_user_img"
            android:text="Tester"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="25sp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"

        android:gravity="center_horizontal">

        <ImageButton
            android:id="@+id/vid_accept"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_videocam_black_24dp"
            android:background="@drawable/btn_accept_shape"
            android:layout_centerInParent="true"
            android:layout_marginRight="130dp" />

        <ImageButton
            android:id="@+id/vid_reject"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:src="@drawable/call_reject_24dp"
            android:background="@drawable/btn_reject_shape"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/vid_accept" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/vid_accept_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Accept"
            android:textColor="#fff"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/vid_reject_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:text="Reject"
            android:textColor="#fff"
            android:textSize="16sp" />

    </RelativeLayout>

