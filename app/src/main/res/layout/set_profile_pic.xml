<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="clip_horizontal"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/custom_toolbar">
        </include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="11"
        android:layout_marginTop="55dp"
        android:orientation="vertical"
        android:padding="20dp">


    <TextView
        android:id="@+id/setpicture_textview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center_horizontal"
        android:text="@string/set"
        android:textSize="25dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/camera_imageview"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_weight="1"
        android:scaleType="fitXY"
        android:src="@drawable/ic_camera_alt_black_24dp"/>

    <TextView
        android:id="@+id/choosephoto_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_weight="1"
        android:text="@string/choose"
        android:textSize="18dp"
        android:textColor="@color/colorchoose"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/Camera_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/camera"
        android:layout_weight="1"
        android:textSize="18dp" />
    <TextView
        android:id="@+id/gallery_textview"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/gallery"
        android:textSize="18dp" />
    <TextView
        android:id="@+id/facebook_textview"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/facebook"
        android:textSize="18dp" />
    <TextView
        android:id="@+id/instagram_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="@string/instagram"
        android:textSize="18dp" />
    <TextView
        android:id="@+id/twitter_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="@string/twitter"
        android:textSize="18dp" />

    <Button
        android:id="@+id/skip_prifile_picture"
        android:layout_width="wrap_content"
        android:layout_weight="2"
        android:layout_height="0dp"
        android:background="@drawable/rounded_border_transparent_inside"
        android:layout_gravity="center"
        android:text="@string/next"
         />

    </LinearLayout>

    </RelativeLayout>

</RelativeLayout>