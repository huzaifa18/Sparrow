<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"


    >


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardUseCompatPadding="true"
        android:layout_height="wrap_content"
        app:contentPadding="10dp">

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="8.5"

            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/friend_image"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:paddingRight="10dp"

                app:srcCompat="@drawable/ic_camera_alt_black_24dp" />

            <LinearLayout
                android:id="@+id/title_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/name_txtview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"


                    android:text="@string/first_name"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mutual_txtview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/first_name"
                    android:textSize="12sp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <Button
                android:id="@+id/friendship_btn"
                android:layout_width="0dp"
                android:layout_height="23dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="6dp"
                android:layout_weight="1.5"
                android:textSize="9sp"
                android:background="@drawable/frndship_btn_selector"
                android:text="@string/friendship"
                android:textAllCaps="false"
                android:textColor="@android:color/black" />


            <Button
                android:id="@+id/cut_btn"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="6dp"
                android:background="@drawable/final_selector"
                android:layout_weight="0.5"
                android:textStyle="bold" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

